<!--Creates a table of clients ordered by last name and type of travel they are interested in --> 

<div class="clientinfo">
	<table class="table table-hover">
		<thead>
			<tr>
				<th class="thead" scope="col">Last Name</th>
				<th class="thead" scope="col">First Name</th>
				<th class="thead" scope="col">Preference</th>
			</tr>
		</thead>
		<tbody>
			<%	clients.forEach(client => { %> 
				<tr>
				<td><a href='/clients/<%= client.id %>'><%= client.lname %></a></td>
				<td><a href='/clients/<%= client.id %>'><%= client.fname %></a></td>
				<td id="typeof"><%= client.type %></td>
				</tr>
				<% }) %>
			</tbody>
		</table>

	</div>

